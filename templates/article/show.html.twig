{% extends 'template.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<br>
<br>
<br>


<div class="container">
    <div class="row">
        <div class="col-md-7">
            <img src="{{asset('uploads/')}}{{ article.image }}" class=" rounded" alt=""
                style="width: 600px; height:350px">
        </div>
        <div class="col-md-5">
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <h1 class="font-weight-bold">{{ article.prix }} DT</h1>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h1>{{ article.titre }}</h1>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h4 class="text-truncate">Publi√© : {{ article.DateAt ? article.DateAt|date('d-m-Y') :
                                '' }}</h4>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <h5 class="text-truncate"> <i class="fas fa-map-marker-alt"></i> <span class="p-2">{{
                                    article.Localisation }}</span></h5>

                        </td>
                    </tr>
                    <tr>
                        <td>

                            <h5 class="text-truncate"> <i class="fas fa-tag"></i> <span class="p-2">{{
                                    article.Category }}</span></h5>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br>
        </div>
    </div>

    <div class="row">
        <h3 class="text-truncate"> Description</h3>
    </div>
    <div class="d-flex flex-row ">
        <div class="col-sm">
            <p> {{ article.description }}</p>
        </div>
    </div>

</div>



<a href="{{ path('article_index') }}" class="btn btn-primary">back to list</a>

<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-info">edit</a>



