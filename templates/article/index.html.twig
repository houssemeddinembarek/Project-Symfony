{% extends 'template.html.twig' %}

{% block title %}Liste des Annonces {% endblock %}

{% block body %}
<br>
<br>
<br>
<div class="row">
    <div class="col">
        <h1>Liste des Annonces</h1>
    </div>
    <div class="col">
        {#<a href="{{ path('article_new') }}" class="btn btn-primary ">Creer une nouvelle annonce</a>#}
    </div>

</div>


<div class="d-flex flex-wrap justify-content-md-center ">
    {% for article in articles %}
    <div class="px-3">
        <a href="{{ path('article_show', {'id': article.id}) }}">
            <img src="{{asset('uploads/')}}{{ article.image }}" class="rounded" alt=""
                style="width: 200px; height:200px">

            <ul class="list-unstyled text-left">
                <li class="text-truncate text-dark font-weight-bold"> {{ article.prix }} DT </li>
                <li class="text-truncate text-dark font-weight-bold"> {{ article.titre }} </li>
                {#<li> {{ article.description }} </li>
                <li> {{ article.DateAt ? article.DateAt|date('Y-m-d H:i:s') : '' }} </li>
                <li> {{ article.Localisation }} </li>#}
            </ul>
        </a>
        {# <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-primary">show</a>
        <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-primary">edit</a>#}
    </div>
    {% else %}

    <td colspan="8">no records found</td>

    {% endfor %}
</div>
</tbody>
</table>


{% endblock %}