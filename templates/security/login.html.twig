{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<br><br><br>

<div class="container">

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <form method="post" action="{{path('security_login')}}">
        <div class="form-group">
            <label for="inputEmail">Email</label>
            <input placeholder="Adress email..." required name="_username" type="text" class="form-control"
                id="inputEmail">
        </div>

        <div class="form-group">
            <label for="inputPassword">Password</label>
            <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control"
                id="inputPassword">
        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>

</div>
{% endblock %}